 *   Function:  
 *
 *********************************************************************************************
 *
 *   Variables  |  function                |  units
 *   --------------------------------------------------------------------------
 *    y         | height of water in lake  |  feet
 *    t         | time in hours            |  hours  
 *    delta_t   | distance between points  |  hours
 *    i         | loop variable            |
 *********************************************************************************************/


 /* Header Files */
 #include <stdio.h>
 #include <math.h>

/*define statements*/
#define FINAL_TIME 750.0
#define NUM_POINTS 25


 /*Start of main function*/
 int main(void)
 {
    /* declorations: */
    double y, t, delta_t;
	int i;
    char quit_char;
    
    printf("           BEET TRUCK BRIDGE SAFETY\n");
    printf("---------------------------------------------------------------\n\n");
	printf("Enter the length  of the bridge(ft): \n");
	printf("Number of I-beams: \n");
	printf("I-beams height(in): \n");
	printf("Moment of inertia for one I-beam(in^4): \n");
 
    delta_t = FINAL_TIME/(NUM_POINTS-1.0);
	t = 0;
	printf("                           RESULTS\n");
	printf("---------------------------------------------------------------\n\n");
	printf("  Position on bridge[hr]       \tdeflection in the bridge[ft]\n");
	for( i = 0; i < NUM_POINTS; i++)
	{
		if( t < 400)
		{
			y = -1.452525e-7*t*t*t+6.01515e-5*t*t+0.008098*t+49.89;
		}else{
			y = 1.50168e-7*t*t*t - 2.54325e-4*t*t + 0.13089*t+32.18;
		}

		printf("\t%5.1f\t\t\t\t\t%6.3f\n", t, y);
		t +=delta_t;
	}

	printf("\n\n\n\n     MAXIMUM STRESS[psi]: ");

   /*This keeps the window open*/
    printf("\n\n\n\nPress enter to q to quit.\n");
	do{ 
	   quit_char = getchar();
	}while( quit_char != 'q' );

   /*end the program*/
   return 0;
 }